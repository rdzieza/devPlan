<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.rd.devplan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/timetable"
        android:label="devPlan"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name="activities.MainActivity"
            android:label="UEK Time Table" >
        </activity>
        <activity
            android:name="activities.MainView"
            android:label="devPlan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="activities.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name="activities.ReportErrorActivity"
            android:label="@string/error_activity_title" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
